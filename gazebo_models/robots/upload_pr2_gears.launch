<launch>
    <arg name="kinect" default="true"/>
    <!-- send pr2 urdf to param server -->
    <group if="$(arg kinect)">
      <param name="robot_description" command="$(find xacro)/xacro.py '/home/aviv/gps/gps/gazebo_models/robots/pr2_gears.urdf.xacro'" />
    </group>
    <group unless="$(arg kinect)">
      <param name="robot_description" command="$(find xacro)/xacro.py '/home/aviv/gps/gps/gazebo_models/robots/pr2_no_kinect.urdf.xacro'" />
    </group>

    <!-- the semantic description that corresponds to the URDF -->
    <param name="robot_description_semantic" textfile="/home/aviv/gps/gps/gazebo_models/robots/pr2.srdf" />
</launch>
